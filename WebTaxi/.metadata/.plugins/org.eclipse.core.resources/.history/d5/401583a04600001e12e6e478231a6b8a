package Hello.com;

import java.util.Scanner;

public class HelloWorld {
	
    public static void main(String[] args) {
    	
    	//Viết chương trình Java để tìm số lớn nhất trong ba số nguyên và in kết quả ra màn hình.
    	
    	System.out.println(findMax(2,3,4));
    	
    }
    
    public static Integer findMax(int a, int b, int c) {
    	int max = a;
    	if(max < b) {
    		max = b;
    	}
    	if(max < c) {
    		max = c;
    	}
    	return max;
    }
    
    public Integer SumTwoNum(int a, int b) {
    	int sum;
    	sum = a+b;
    	return sum;
    }
   
}